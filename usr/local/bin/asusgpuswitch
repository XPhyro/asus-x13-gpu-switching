#!/usr/bin/env sh

log() {
    printf "%s\n" "$@"
}

logerr() {
    printf "%s\n" "$@" >&2
}

GPUDIR=/etc/asus_nvidia
LOCKDIR=/tmp/asusgpuswitch.lck

while ! mkdir -- "$LOCKDIR"; do
    sleep 1
done

[ "$#" -ne 0 ] && {
    case "$1" in
        on)
            [ -d "$GPUDIR" ] && exit 0
            log "already on"
            ;;
        off)
            [ ! -d "$GPUDIR" ] && exit 0
            log "already off"
            ;;
        *)
            logerr "unkown argument"
            exit 1;;
    esac
}

if ! mkdir -- "$GPUDIR"; then
    log "removing nvidia kernel modules"
    rmmod nvidia_uvm
    rmmod nvidia_drm
    rmmod nvidia_modeset
    rmmod nvidia
  
    sleep 1
  
    log "acpi_call to power off the dGPU"
    log 1 > /sys/bus/pci/devices/0000\:01\:00.0/remove
  
    sleep 1
  
    log "removing /etc/asus_nvidia"
    rm -r -- "$GPUDIR"
else
    log "acpi_call to power on the dGPU"
    log 1 > /sys/bus/pci/rescan
    sleep 1
  
    log "loading nvidia kernel modules"
    modprobe nvidia_uvm
    modprobe nvidia_drm
    modprobe nvidia_modeset
    modprobe nvidia
  
    log "setting nvidia power/control auto"
    log 'auto' > /sys/bus/pci/devices/0000\:01\:00.0/power/control
  
    log "setting $GPUDIR"
fi

rm -r -- "$LOCKDIR"
